<UserControl
    x:Class="DDPAIDash.Controls.DeviceVideoViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ListView Name="ImageList" ItemsSource="{Binding}" Tapped="ImageList_Tapped" Holding="ImageList_Holding">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="5" Margin="10,10,0,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <!--image and dimensions-->
                                <Grid>
                                    <Image Source="{Binding Image}" Width="260"/>
                                    <TextBlock Foreground="White" Height="16" TextAlignment="Center" VerticalAlignment="Bottom" Text="{Binding Name}" />
                                </Grid>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</UserControl>

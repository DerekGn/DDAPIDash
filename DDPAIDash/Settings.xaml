                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton x:Name="BtnPair" Click="BtnPair_Click" IsEnabled="{Binding DeviceState, Converter={StaticResource DeviceStateToBooleanConverter}, ConverterParameter=Connected, Mode=OneWay}">
                <AppBarButton.Icon>
